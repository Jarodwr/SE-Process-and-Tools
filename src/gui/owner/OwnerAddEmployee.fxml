<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.owner.OwnerAddEmployee">
   <center>
      <AnchorPane prefHeight="1699.0" prefWidth="680.0" BorderPane.alignment="CENTER">
         <children>
            <Pane layoutX="13.0" layoutY="15.0" prefHeight="470.0" prefWidth="654.0">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" text="Add Employee">
                     <font>
                        <Font name="Calibri" size="36.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="55.0" text="Fill the form below to add a new employee to the online system">
                     <font>
                        <Font name="Calibri" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="name" layoutX="232.0" layoutY="123.0" promptText="Name">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="phone" layoutX="232.0" layoutY="169.0" promptText="Phone Number">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="address" layoutX="232.0" layoutY="214.0" promptText="Address">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <Button fx:id="submitEmployee" layoutX="272.0" layoutY="321.0" mnemonicParsing="false" onAction="#submitEmployee" prefHeight="36.0" prefWidth="111.0" style="-fx-background-color: #ff471a;" text="Add Employee" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="13.0" />
                     </font>
                  </Button>
                  <Label fx:id="warning" alignment="CENTER" layoutX="161.0" layoutY="255.0" prefHeight="54.0" prefWidth="334.0" />
               </children>
            </Pane>
         </children></AnchorPane>
   </center>
</BorderPane>
