<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.owner.OwnerChangeOpeningTimesController">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="648.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="34.0" layoutY="34.0" text="Change Opening Times">
               <font>
                  <Font name="Calibri" size="36.0" />
               </font>
            </Label>
            <Label fx:id="warning" layoutX="482.0" layoutY="359.0" prefHeight="97.0" prefWidth="165.0" />
            <Label layoutX="34.0" layoutY="75.0" prefHeight="37.0" text="Click on a time slot to change the business times." textOverrun="CLIP">
               <font>
                  <Font name="Calibri" size="18.0" />
               </font>
            </Label>
            <Button fx:id="SubmitButton" layoutX="246.0" layoutY="388.0" mnemonicParsing="false" onAction="#submit" prefHeight="39.0" prefWidth="236.0" style="-fx-background-color: #ff471a;" text="Save Business Times" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="13.0" />
               </font>
            </Button>
            <ComboBox fx:id="pickDay" layoutX="34.0" layoutY="112.0" onAction="#updateCurrentAvailability" prefHeight="25.0" prefWidth="169.0" promptText="Select Day" />
            <Pane fx:id="TimePickerPane" layoutX="34.0" layoutY="165.0" prefHeight="193.0" prefWidth="518.0" />
            <HBox alignment="CENTER" layoutX="144.0" layoutY="448.0" prefHeight="17.0" prefWidth="299.0">
               <children>
                  <Label fx:id="errorMessage" text="Label" textFill="#f2f2f2">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children></AnchorPane>
   </center>
</BorderPane>
