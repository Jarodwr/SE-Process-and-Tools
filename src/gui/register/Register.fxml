<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="600.0" maxWidth="900.0" minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.register.RegisterController">
   <center>
      <Pane prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Pane id="login-pane" layoutX="277.0" layoutY="60.0" prefHeight="522.0" prefWidth="352.0" style="-fx-background-color: #dddddd; -fx-background-radius: 10 10 10 10;">
               <children>
                  <Label layoutX="124.0" layoutY="14.0" text="Register">
                     <font>
                        <Font name="Calibri" size="30.0" />
                     </font>
                  </Label>
                  <Label layoutX="60.0" layoutY="64.0" prefHeight="52.0" prefWidth="268.0" text="Please fill in your details below, and choose a business to register to." wrapText="true">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="registerErrorMessage" alignment="CENTER" layoutX="2.0" layoutY="422.0" prefHeight="17.0" prefWidth="346.0" style="-fx-text-alignment: center;" text="Username must not only contain numbers!" textAlignment="CENTER" textFill="#dddddd" />
                  <HBox alignment="CENTER_LEFT" layoutX="78.0" layoutY="159.0" prefHeight="27.0" prefWidth="191.0" />
                  <TextField fx:id="username" layoutX="77.0" layoutY="171.0" onKeyPressed="#checkEnter" onKeyReleased="#checkAll" promptText="Username">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="password" layoutX="77.0" layoutY="208.0" onKeyPressed="#checkEnter" onKeyReleased="#checkAll" promptText="Password">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </PasswordField>
                  <PasswordField fx:id="passwordCon" layoutX="77.0" layoutY="246.0" onKeyPressed="#checkEnter" onKeyReleased="#checkAll" promptText="Confirm Password">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </PasswordField>
                  <TextField fx:id="name" layoutX="81.0" layoutY="314.0" onKeyPressed="#checkEnter" onKeyReleased="#checkAll" promptText="Name">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="address" layoutX="80.0" layoutY="355.0" onKeyPressed="#checkEnter" onKeyReleased="#checkAll" promptText="Address">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="number" layoutX="81.0" layoutY="392.0" onKeyPressed="#checkEnter" onKeyReleased="#checkAll" promptText="Phone Number">
                     <font>
                        <Font name="Calibri" size="16.0" />
                     </font>
                  </TextField>
                  <Button fx:id="registerButton" layoutX="132.0" layoutY="469.0" mnemonicParsing="false" onAction="#onRegisterClick" prefHeight="27.0" prefWidth="83.0" style="-fx-background-color: #ff471a;" text="Register" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="13.0" />
                     </font>
                  </Button>
                  <Label layoutX="81.0" layoutY="289.0" prefHeight="17.0" prefWidth="113.0" text="Password Strength :" />
                  <Label fx:id="passStrength" alignment="CENTER_RIGHT" layoutX="194.0" layoutY="289.0" prefHeight="17.0" prefWidth="78.0" text="Strong" textFill="#dddddd" />
                  <ComboBox fx:id="chooseBusiness" layoutX="79.0" layoutY="128.0" onAction="#chooseBusinessAction" prefHeight="25.0" prefWidth="188.0" />
               </children>
               <effect>
                  <ColorAdjust />
               </effect>
            </Pane>
            <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="27.0" prefWidth="105.0" style="-fx-background-color: #ff471a;" text="Return to menu" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Calibri" size="13.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </center>
</BorderPane>
