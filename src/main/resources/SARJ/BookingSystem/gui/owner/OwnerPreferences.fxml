<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

   <center>
      <AnchorPane prefHeight="500.0" prefWidth="648.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="34.0" layoutY="34.0" text="Preferences">
               <font>
                  <Font name="Calibri" size="36.0" />
               </font>
            </Label>
            <Label layoutX="34.0" layoutY="75.0" prefHeight="37.0" text="Change your preferences below by filling the feilds below" textOverrun="CLIP">
               <font>
                  <Font name="Calibri" size="18.0" />
               </font>
            </Label>
            <Pane layoutX="150.0" layoutY="174.0">
               <children>
                  <Button fx:id="SubmitButton" layoutX="190.0" layoutY="169.0" mnemonicParsing="false" onAction="#submit" prefHeight="30.0" prefWidth="190.0" style="-fx-background-color: #ff471a;" text="Update Preferences" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="13.0" />
                     </font>
                  </Button>
                  <Label layoutX="1.0" layoutY="62.0" text="Header Message">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="headerMessage" layoutX="190.0" layoutY="63.0" prefHeight="25.0" prefWidth="190.0" />
                  <Label prefHeight="27.0" prefWidth="176.0" text="Colour Accent">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ColorPicker fx:id="accent" layoutX="191.0" layoutY="1.0" prefHeight="25.0" prefWidth="190.0" />
                  <Label layoutX="1.0" layoutY="91.0" text="Must not be longer than 50 characters" />
                  <HBox alignment="CENTER_RIGHT" layoutX="76.0" layoutY="133.0" prefHeight="17.0" prefWidth="299.0">
                     <children>
                        <Label fx:id="errorMessage" text="Label" textFill="#f2f2f2">
                           <font>
                              <Font name="Calibri" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </Pane>
         </children></AnchorPane>
   </center>
</BorderPane>
